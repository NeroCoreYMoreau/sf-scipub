{% block title %}Sciences-detail{% endblock %}

{% block body %}

<!-- DEBUT Contenu -->
<div class="jumbotron">
    <div class="container">

        <!-- ScienceController -->

        <div class="science-thumb">
            <h1><!-- titre science --></h1>
            <div>
                <p>
                    <!-- description science -->
                </p>
                <p>
                    <!-- Lien vers la liste des sciences -->
                    <a href="{{ path('science_list') }}"
                       class="btn btn-sm btn-default">
